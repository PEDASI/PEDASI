# Template populated on {{ template_run_date }}

# Settings for local deployment
SECRET_KEY={{ secret_key }}
DEBUG={{ "True" if deploy_mode > 1 else "False" }}
ALLOWED_HOSTS={{ inventory_hostname }},localhost,127.0.0.1

# Databases
DATABASE_URL=mysql://pedasi:pedasi@localhost:3306/pedasi

{% if oauth2_key %}
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY={{ oauth2_key }}
{% endif %}
{% if oauth2_secret %}
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET={{ oauth2_secret }}
{% endif %}

# SendGrid SMTP server - dev key
{% if email_host_password %}
EMAIL_HOST=smtp.sendgrid.net
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD={{ email_host_password }}
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL={{ default_from_email }}

ADMINS={{ admin_name }}|{{ admin_email }}
{% else %}
# No email configuration provided
{% endif %}

